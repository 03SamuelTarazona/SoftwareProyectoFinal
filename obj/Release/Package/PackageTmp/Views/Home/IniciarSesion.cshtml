﻿@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>IniciarSesion</title>
    <link href="~/Content/InicioSesion.css" rel="stylesheet" />
</head>
<body>
    <header>

        @using (Html.BeginForm("IniciarSesion", "Home", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <nav>
                <input type="checkbox" id="check" />
                <label for="check" class="checkbtn">
                    <img class="img2" src="~/Content/Img/MenuDespliegue.png" alt="Icono de navegación" />
                </label>
                <div class="Text1"><h1>CentroMedico</h1></div>
                <a href="#" class="enlace">

                    <a asp-area="" asp-controller="Home" asp-action="Index" class="navbar-brand"><img class="img0" src="~/Content/Img/Logo_Ing_Software_Sin_Fondo.png" /></a>

                </a>
                <ul>
                    <li><a href="#">SOBRE NOSOTROS</a></li>
                    <li class=""><a href="#">SERVICIOS</a></li>
                    <li class=""><a href="#">CONTACTO</a></li>
                    <li class="">
                        <a asp-area="" asp-controller="Home" asp-action="InicioSesion" class="nav-link"><img class="img1" src="~/Content/Img/Usuario.png" /></a>
                    </li>

                </ul>
            </nav>

            <div class="container">
                <h2>Iniciar Sesion</h2>

                <div class="inputbox">
                    <ion-icon name="mail-outlane"></ion-icon>
                    <input type="email" id="correo" name="correo" placeholder="Nombre de Usuario" required>
                    <!-- <label for="correo">Correo</label> -->

                </div>

                <div class="inputbox">
                    <ion-icon name="lock-closed-outline"></ion-icon>
                    <input type="password" id="contrasena" name="contrasena" placeholder="Contraseña" required>
                    <!-- <label for="contrasena">Contraseña</label> -->

                </div>

                <button type="submit">Iniciar Sesion</button>

                <div class="links">
                    <a href="RegistroPaciente" asp-area="RegistroPaciente" asp-controller="Home" asp-action="RegistroPaciente">Crear Cuenta</a> | <a href="BuscarCorreo" asp-area="BuscarCorreo" asp-controller="Home" asp-action="BuscarCorreo">Recuperar Cuenta</a>
                </div>

            </div>

        }  @if (ViewData["Mensaje"] != null)
        {
            <p>@ViewData["Mensaje"]</p>
        }

    </header>
</body>

</html>
